<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.surname %></td>
        <td><%= link_to 'Show', student , class: "btn btn-default"%></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        <% else  %>
        <h2> Not logged </h2>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Student', new_student_path, class: "btn btn-default" %>
<% end %>
